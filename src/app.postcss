@import url('https://fonts.googleapis.com/css2?family=Exo+2:wght@900&family=Fuggles&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--background: 0 0% 100%;
		--foreground: 240 10% 3.9%;
		--card: 0 0% 100%;
		--card-foreground: 240 10% 3.9%;
		--popover: 0 0% 100%;
		--popover-foreground: 240 10% 3.9%;
		--primary: 240 5.9% 10%;
		--primary-foreground: 0 0% 98%;
		--secondary: 240 4.8% 95.9%;
		--secondary-foreground: 240 5.9% 10%;
		--muted: 240 4.8% 95.9%;
		--muted-foreground: 240 3.8% 46.1%;
		--accent: 240 4.8% 95.9%;
		--accent-foreground: 240 5.9% 10%;
		--destructive: 0 84.2% 60.2%;
		--destructive-foreground: 0 0% 98%;
		--border: 240 5.9% 90%;
		--input: 240 5.9% 90%;
		--ring: 240 5.9% 10%;
		--radius: 0.5rem;
	}
	.dark {
		--background: 240 10% 3.9%;
		--foreground: 0 0% 98%;
		--card: 240 10% 3.9%;
		--card-foreground: 0 0% 98%;
		--popover: 240 10% 3.9%;
		--popover-foreground: 0 0% 98%;
		--primary: 0 0% 98%;
		--primary-foreground: 240 5.9% 10%;
		--secondary: 240 3.7% 15.9%;
		--secondary-foreground: 0 0% 98%;
		--muted: 240 3.7% 15.9%;
		--muted-foreground: 240 5% 64.9%;
		--accent: 240 3.7% 15.9%;
		--accent-foreground: 0 0% 98%;
		--destructive: 0 62.8% 30.6%;
		--destructive-foreground: 0 0% 98%;
		--border: 240 3.7% 15.9%;
		--input: 240 3.7% 15.9%;
		--ring: 240 4.9% 83.9%;
	}
}

.no-highlight {
	-webkit-tap-highlight-color: transparent;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
}

@layer base {
	* {
		@apply border-border;
	}
	body {
		@apply bg-background text-foreground;
	}

	html {
		scroll-behavior: smooth;
	}
}

::-webkit-scrollbar {
	@apply w-0;
	@apply h-2;
}

::-webkit-scrollbar-track {
	@apply !bg-transparent;
}
::-webkit-scrollbar-thumb {
	@apply rounded-xl !bg-border;
}

::-webkit-scrollbar-corner {
	background: rgba(0, 0, 0, 0);
}

/* 自定义导航样式 */
@layer components {
	.nav-item-modern {
		@apply relative inline-flex items-center px-4 py-2 text-sm font-medium tracking-wider rounded-full transition-all duration-300;
		@apply hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 hover:text-blue-600;
		@apply dark:hover:from-blue-900/20 dark:hover:to-purple-900/20 dark:hover:text-blue-400;
		@apply hover:shadow-lg hover:shadow-blue-200/50 dark:hover:shadow-blue-900/30;
		@apply hover:scale-105 hover:-translate-y-0.5;
	}
	
	.nav-item-active {
		@apply bg-gradient-to-r from-blue-100 to-purple-100 text-blue-700;
		@apply dark:from-blue-900/30 dark:to-purple-900/30 dark:text-blue-400;
		@apply border border-blue-200/50 dark:border-blue-800/50;
	}
}

/* 主页背景动画 */
@layer utilities {
	.bg-animated {
		background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
		background-size: 400% 400%;
		animation: gradient 15s ease infinite;
	}
	
	@keyframes gradient {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
	
	.floating {
		animation: floating 6s ease-in-out infinite;
	}
	
	@keyframes floating {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-20px); }
	}
}
